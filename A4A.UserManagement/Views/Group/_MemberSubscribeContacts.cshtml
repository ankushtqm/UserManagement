<div>
    <p>You have selected <span data-bind='text: $data.selectedValues().length'>&nbsp;</span> Subscribers</p>
</div>

<div class="GroupSubscriber" id="GroupSubscriberContainer">
    <label for="acSubInfoUser">Contact: </label>
    <p>
        <input type="text" class="acSubInfoUser chosen form-control" style="width:300px;" placeholder="Search Contacts" id="acSubInfoUser" data-bind="ko_autocomplete: {source: getLanguages, select: selectLanguageContacts ,minLength: 3 }" />
        <a href='#' class='text-danger btndelete' data-bind="click: clearSubscribertxt">Delete</a>
    </p>
    <table class="table informationalroles" data-bind='visible: $data.selectedValues().length > 0'>
        <thead>
            <tr>
                <th class="control-label">Company Name</th>
                <th class="control-label">Name</th>
                <th class="control-label ">Email Administrator</th>
                <th class="control-label">Delete</th>
            </tr>
        </thead>
        <tbody data-bind="foreach: $data.selectedValues().sort(function(l,r) { return l.Name == r.Name ? 0 : (l.Name < r.Name ? -1 : 1)}) ">
            <tr>
                <td class="element-width"><span data-bind='text: CompanyName'></span></td>
                <td class="element-width"><span data-bind="text: Name"></span></td>
                <td class="element-width"><input type='checkbox' name='EmailAdmin' data-bind="value:UserId, checked:CheckStatus" onchange="chkContactRoles(this)" /></td>
                <td class="element-width"><a href='#' data-bind='click: $parent.removeUMContacts'>Delete</a></td>
            </tr>
        </tbody>
    </table>
</div>

<style>
    .informationalroles {
        width: 57% !important
    }
</style>